<%= link_to('Back to List', tasks_path, class: 'back-link') %>

<div class="tasks new">
  <h2>Create Task</h2>

  <%= form_for(@task) do |f| %>
    <% #url: tasks_path, method: 'post' %>

    <table summary="Tasks from fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Completed</th>
        <td><%= f.check_box(:completed) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_area(:description) %></td>
      </tr>
      <tr>
        <th>Category</th>
        <td><%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "Select a category") %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Task") %>
    </div>

  <% end %>
</div>